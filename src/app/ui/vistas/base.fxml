<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="650.0" prefWidth="1000.0" stylesheets="@../estilos/style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ui.controladores.BaseController">
   <children>
     <VBox alignment="TOP_CENTER" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" spacing="10.0" styleClass="sidebar">
        <children>
           <VBox alignment="CENTER">
              <children>
                 <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="SOMETIMES">
                    <image>
                       <Image url="@../../../res/img/icono-w-128.png" />
                    </image>
                 </ImageView>
                 <Label alignment="CENTER" styleClass="label-white-title" text="Olimpo" />
              </children>
           </VBox>
           <VBox alignment="CENTER">
              <children>
                 <ToggleButton fx:id="toggleButtonClientes" mnemonicParsing="false" styleClass="toggle-button-cliente" />
                 <Label alignment="CENTER" prefHeight="16.0" prefWidth="119.0" styleClass="label-white" text="Clientes" />
              </children>
           </VBox>
           <VBox alignment="CENTER">
              <children>
                 <ToggleButton fx:id="toggleButtonInmuebles" mnemonicParsing="false" styleClass="toggle-button-inmueble" />
                 <Label alignment="CENTER" prefHeight="16.0" prefWidth="119.0" styleClass="label-white" text="Inmuebles" />
              </children>
           </VBox>
           <VBox alignment="CENTER">
              <children>
                 <ToggleButton fx:id="toggleButtonVendedores" mnemonicParsing="false" styleClass="toggle-button-vendedor" />
                 <Label alignment="CENTER" prefHeight="16.0" prefWidth="119.0" styleClass="label-white" text="Vendedores" />
              </children>
           </VBox>
           <VBox alignment="CENTER">
              <children>
                 <ToggleButton fx:id="toggleButtonPropietarios" mnemonicParsing="false" styleClass="toggle-button-propietario" />
                 <Label alignment="CENTER" prefHeight="16.0" prefWidth="119.0" styleClass="label-white" text="DueÃ±os" />
              </children>
           </VBox>
           <VBox alignment="CENTER">
              <children>
                 <ToggleButton fx:id="toggleButtonAyuda" mnemonicParsing="false" styleClass="toggle-button-ayuda" />
                 <Label alignment="CENTER" prefHeight="16.0" prefWidth="119.0" styleClass="label-white" text="Ayuda" />
              </children>
           </VBox>
        </children>
        <HBox.margin>
           <Insets />
        </HBox.margin>
        <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
     </VBox>
      <VBox HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="titlebar" alignment="CENTER_RIGHT" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label styleClass="label-large" text="Vista base">
                     <padding>
                        <Insets left="30.0" right="10.0" top="30.0" />
                     </padding></Label>
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <ToggleButton fx:id="minimizeButton" maxHeight="30.0" maxWidth="40.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#minimizePlatform" prefHeight="30.0" prefWidth="40.0" styleClass="toggle-button-minimize" />
                  <ToggleButton fx:id="maximizeButton" maxHeight="30.0" maxWidth="40.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#maximizePlatform" prefHeight="30.0" prefWidth="40.0" styleClass="toggle-button-maximize" />
                  <ToggleButton fx:id="closeButton" maxHeight="30.0" maxWidth="40.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#exitPlatform" prefHeight="30.0" prefWidth="40.0" styleClass="toggle-button-close" />
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="main" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets top="30.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER_RIGHT" styleClass="buttonbar">
               <children>
                  <Button fx:id="acceptButton" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="button-confirm" text="Aceptar" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" styleClass="button-cancel" text="Cancelar" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
