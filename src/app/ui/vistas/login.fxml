<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550.0" prefWidth="400.0" stylesheets="@../estilos/style.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ui.controladores.LoginController">
    <children>
        <GridPane alignment="CENTER" hgap="20.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="grid-pane" vgap="20.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="400.0" prefWidth="250.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
            <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>
            <children>
            <ComboBox fx:id="cbTipoDocumento" maxWidth="1.7976931348623157E308" promptText="Tipo de documento" GridPane.columnIndex="1" />
                <TextField fx:id="tfNumeroDocumento" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="N° de documento" styleClass="textfield" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <PasswordField fx:id="pfContra" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Contraseña" styleClass="textfield" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" maxHeight="100.0" minHeight="50.0" prefHeight="100.0" styleClass="buttonbar-login">
            <children>
                <Button maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#registrar" prefHeight="40.0" prefWidth="150.0" styleClass="button-action" text="Registrarse" HBox.hgrow="ALWAYS" />
                <Button fx:id="botonIngresar" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" mnemonicParsing="false" onAction="#ingresar" prefHeight="40.0" prefWidth="150.0" styleClass="button-confirm" text="Ingresar" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</VBox>
